---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "JORAN - La première cidrothèque de Belgique. Découvrez plus de 150 cidres et poirés artisanaux." } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #3d2817; /* Brun foncé bois vieilli */
    --color-secondary: #d4a574; /* Beige miel cidre */
    --color-accent: #8b4513; /* Brun moyen bois */
    --color-hermine: #f5f0e8; /* Crème papier ancien */
    --color-dark: #2d1810; /* Brun très foncé */
    --color-text: #2d1810;
    --color-text-light: #6b5544;
    --color-wood-light: #c19a6b; /* Bois clair naturel */
    --color-wood-medium: #8b6f47; /* Bois moyen */

    --font-heading: 'Cinzel', serif;
    --font-body: 'Lato', sans-serif;

    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 4rem;
    --spacing-xl: 6rem;

    /* Textures bois */
    --wood-texture: repeating-linear-gradient(
      90deg,
      rgba(61, 40, 23, 0.03) 0px,
      rgba(61, 40, 23, 0.03) 2px,
      transparent 2px,
      transparent 4px
    );
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    color: var(--color-text);
    line-height: 1.6;
    background-color: var(--color-hermine);
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    color: var(--color-primary);
    line-height: 1.2;
    margin-bottom: var(--spacing-sm);
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
  }

  h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
  }

  h3 {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 600;
  }

  p {
    margin-bottom: var(--spacing-sm);
  }

  a {
    color: var(--color-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--color-accent);
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .section {
    padding: var(--spacing-xl) 0;
  }

  .btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: none;
    border-radius: 0;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--color-primary), var(--color-wood-medium));
    color: var(--color-hermine);
    box-shadow: 0 4px 15px rgba(61, 40, 23, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.1);
    border: 2px solid var(--color-accent);
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, var(--color-wood-medium), var(--color-primary));
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(61, 40, 23, 0.5), inset 0 1px 0 rgba(255, 255, 255, 0.15);
  }

  .btn-secondary {
    background: linear-gradient(135deg, var(--color-secondary), var(--color-wood-light));
    color: var(--color-dark);
    box-shadow: 0 4px 15px rgba(212, 165, 116, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.2);
    border: 2px solid var(--color-accent);
  }

  .btn-secondary:hover {
    background: linear-gradient(135deg, var(--color-wood-light), var(--color-secondary));
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(212, 165, 116, 0.5), inset 0 1px 0 rgba(255, 255, 255, 0.25);
  }

  /* Motif décoratif breton */
  .celtic-border {
    position: relative;
    padding: var(--spacing-md) 0;
  }

  .celtic-border::before,
  .celtic-border::after {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 3px;
    background: linear-gradient(90deg, 
      transparent, 
      var(--color-secondary) 20%, 
      var(--color-secondary) 80%, 
      transparent
    );
  }

  .celtic-border::before {
    top: 0;
  }

  .celtic-border::after {
    bottom: 0;
  }

  /* Motif bois/hermine */
  .hermine-pattern {
    position: relative;
  }

  .hermine-pattern::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(61, 40, 23, 0.02) 2px,
        rgba(61, 40, 23, 0.02) 4px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 80px,
        rgba(139, 69, 19, 0.03) 80px,
        rgba(139, 69, 19, 0.03) 82px
      );
    opacity: 0.5;
    pointer-events: none;
  }

  /* Texture bois pour éléments spécifiques */
  .wood-texture {
    background-image: var(--wood-texture);
    position: relative;
  }

  .wood-texture::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      repeating-linear-gradient(
        90deg,
        rgba(139, 111, 71, 0.05) 0px,
        rgba(139, 111, 71, 0.05) 3px,
        transparent 3px,
        transparent 6px
      );
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .section {
      padding: var(--spacing-lg) 0;
    }
    
    .container {
      padding: 0 var(--spacing-sm);
    }
  }
</style>