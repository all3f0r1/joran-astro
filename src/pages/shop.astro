<script>
  // Mobile menu
  const navToggle = document.getElementById('navToggle');
  const navMenu = document.getElementById('navMenu');
  const navLinks = document.querySelectorAll('.nav-link');

  navToggle?.addEventListener('click', () => {
    navToggle.classList.toggle('active');
    navMenu?.classList.toggle('active');
  });

  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      navToggle?.classList.remove('active');
      navMenu?.classList.remove('active');
    });
  });

  // Filters
  const categoryFilter = document.getElementById('category-filter') as HTMLSelectElement;
  const originFilter = document.getElementById('origin-filter') as HTMLSelectElement;
  const sortFilter = document.getElementById('sort-filter') as HTMLSelectElement;
  const productsGrid = document.getElementById('productsGrid');
  const emptyState = document.getElementById('emptyState');

  function filterAndSortProducts() {
    const products = Array.from(document.querySelectorAll('.product-card'));
    const category = categoryFilter.value;
    const origin = originFilter.value;
    const sort = sortFilter.value;

    let visibleCount = 0;

    // Filter
    products.forEach(product => {
      const el = product as HTMLElement;
      const productCategory = el.dataset.category || '';
      const productOrigin = el.dataset.origin || '';
      
      const categoryMatch = category === 'Tous' || productCategory === category;
      const originMatch = origin === 'Tous' || productOrigin === origin;
      
      if (categoryMatch && originMatch) {
        el.style.display = 'flex';
        visibleCount++;
      } else {
        el.style.display = 'none';
      }
    });

    // Sort visible products
    const visibleProducts = products.filter(p => (p as HTMLElement).style.display !== 'none');
    
    if (sort === 'name') {
      visibleProducts.sort((a, b) => {
        const nameA = a.querySelector('.product-name')?.textContent || '';
        const nameB = b.querySelector('.product-name')?.textContent || '';
        return nameA.localeCompare(nameB);
      });
    } else if (sort === 'price-asc' || sort === 'price-desc') {
      visibleProducts.sort((a, b) => {
        const priceA = parseFloat((a as HTMLElement).dataset.price || '0');
        const priceB = parseFloat((b as HTMLElement).dataset.price || '0');
        return sort === 'price-asc' ? priceA - priceB : priceB - priceA;
      });
    }

    // Reorder DOM
    visibleProducts.forEach(product => {
      productsGrid?.appendChild(product);
    });

    // Show/hide empty state
    if (emptyState) {
      emptyState.style.display = visibleCount === 0 ? 'block' : 'none';
    }
  }

  categoryFilter?.addEventListener('change', filterAndSortProducts);
  originFilter?.addEventListener('change', filterAndSortProducts);
  sortFilter?.addEventListener('change', filterAndSortProducts);

  // Add to cart
  document.querySelectorAll('.add-to-cart').forEach(button => {
    button.addEventListener('click', (e) => {
      const btn = e.target as HTMLElement;
      const productId = btn.dataset.id;
      const originalText = btn.textContent;
      
      btn.textContent = '‚úì Ajout√© !';
      btn.style.background = 'linear-gradient(135deg, #28a745, #218838)';
      
      setTimeout(() => {
        btn.textContent = originalText || '';
        btn.style.background = '';
      }, 2000);
      
      console.log(`Product ${productId} added to cart`);
    });
  });

  // Intersection Observer for animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        (entry.target as HTMLElement).style.animationPlayState = 'running';
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll('.fade-in').forEach((el) => {
    (el as HTMLElement).style.animationPlayState = 'paused';
    observer.observe(el);
  });
</script>